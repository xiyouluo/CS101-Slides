{
    "version": 1,
    "include": [
        "*"
    ],
    "exclude": [],
    "rules": [
        {
            "source": "/(.*\\.(js|css|png|jpg|jpeg|gif|svg|woff|woff2|ico|json|md|txt|mp4|webm|pdf))",
            "destination": "/$1",
            "status": 200
        },
        {
            "source": "/:dir/:file+",
            "destination": "/:dir/:file+",
            "status": 200
        },
        {
            "source": "/:dir",
            "destination": "/:dir/index.html",
            "status": 200
        },
        {
            "source": "/(.*)",
            "destination": "/index.html",
            "status": 200
        }
    ]
}